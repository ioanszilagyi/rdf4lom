<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" verticalAlign="top" width="100%">

	<mx:Script>
		<![CDATA[
			import as3.DynCatArrays;
			private function removeComponent():void {
				DynCatArrays.lomRDescription.removeItemAt(DynCatArrays.lomRDescription.getItemIndex(this));
				parent.removeChild(this);
			}			
		]]>
	</mx:Script>
	<mx:TextArea width="50%" height="80" id="description"/>
	<mx:VRule height="80"/>
	<mx:ComboBox width="50%" editable="true" id="lang"></mx:ComboBox>
	<mx:VRule height="15"/>
	<mx:Button icon="@Embed(source='image/delete.png')" width="26" height="22" click="removeComponent();"/>	
</mx:HBox>
