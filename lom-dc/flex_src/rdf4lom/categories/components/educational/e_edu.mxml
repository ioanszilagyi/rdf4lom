<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" 
		verticalAlign="top" 
		label="{resourceManager.getString('myResources', 'EDUCATIONAL')} #{parent.getChildIndex(this)+1}"
		width="100%"
		creationComplete="addComponent()">
	<mx:Script>
		<![CDATA[
			import flash.sampler.NewObjectSample;
			import mx.collections.ArrayCollection;
			import as3.DynCatArrays;
			
			private function addComponent():void {
				einteractivitytype.addChild(new e_int_add());
				elearningresourcetype.addChild(new e_lea_add());
				einteractivitylevel.addChild(new e_int_lev_add());
				esemanticdensity.addChild(new e_sem_add());
				eintendedendusererrole.addChild(new e_int_end_add());
				econtext.addChild(new e_con_add());
				etypicalagerange.addChild(new e_typ_add());
				edificulty.addChild(new e_dif_add());
				etypicallearningtime.addChild(new e_typ_lea_add());
				edescription.addChild(new e_des_add());
				elanguage.addChild(new e_lan_add());
			}
			
			private function removeComponent():void {
				DynCatArrays.lomEEducational.removeItemAt(DynCatArrays.lomEEducational.getItemIndex(this));
				parent.removeChild(this);
			}
		]]>
	</mx:Script>
	<mx:Style source="rdf4lom/css/style.css" />
        
	<mx:Accordion id="educational" width="100%" height="100%" headerStyleName="AccordionCategoriesHeaderStyle">	
		<mx:VBox label="5.1 {resourceManager.getString('myResources', 'INTERACTIVITYTYPE')}" id="einteractivitytype" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.2 {resourceManager.getString('myResources', 'LEARNINGRESOURCETYPE')}" id="elearningresourcetype" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.3 {resourceManager.getString('myResources', 'INTERACTIVITYLEVEL')}" id="einteractivitylevel" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.4 {resourceManager.getString('myResources', 'SEMANTICDENSITY')}" id="esemanticdensity" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.5 {resourceManager.getString('myResources', 'INTENDEDENDUSERROLE')}" id="eintendedendusererrole" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.6 {resourceManager.getString('myResources', 'CONTEXT')}" id="econtext" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.7 {resourceManager.getString('myResources', 'TYPICALAGERANGE')}" id="etypicalagerange" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.8 {resourceManager.getString('myResources', 'DIFFICULTY')}" id="edificulty" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.9 {resourceManager.getString('myResources', 'TYPICALLEARNINGTIME')}" id="etypicallearningtime" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.10 {resourceManager.getString('myResources', 'DESCRIPTION')}" id="edescription" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
		<mx:VBox label="5.11 {resourceManager.getString('myResources', 'LANGUAGE')}" id="elanguage" horizontalAlign="left" verticalAlign="top" width="100%" height="100%" />
	</mx:Accordion>
	<mx:VRule height="30"/>
	<mx:Button icon="@Embed(source='image/delete.png')" width="26" height="22" click="removeComponent();"/>	
	
</mx:HBox>
