<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" verticalAlign="middle">
	
	<mx:Script>
		<![CDATA[
			import as3.DynCatArrays;
			private function removeComponent():void {
				DynCatArrays.lomMIdentifier.removeItemAt(DynCatArrays.lomMIdentifier.getItemIndex(this));
				parent.removeChild(this);
			}
		]]>
	</mx:Script>
	
	<mx:Label text="{resourceManager.getString('myResources', 'CATALOG')}"/>
	<mx:TextInput id="catalog"/>
	<mx:VRule height="15"/>
	<mx:Label text="{resourceManager.getString('myResources', 'ENTRY')}"/>
	<mx:TextInput id="entry"/>
	<mx:VRule height="15"/>
	<mx:Button icon="@Embed(source='image/delete.png')" width="26" height="22" click="removeComponent();"/>	
</mx:HBox>
